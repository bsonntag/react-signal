{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "@types",
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    ".babelrc.js",
    "jest.config.js",
    "dist",
    "src/**.test.*"
  ]
}
